{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://cashflow-chronicles.app/schemas/v1.0.0/cashflow.json",
  "title": "Cashflow Chronicles Data File",
  "description": "Schema for validating Cashflow Chronicles JSON data files",
  "type": "object",
  "required": ["version", "metadata", "currencies", "accounts", "transactions", "budgets", "recurringTransactions"],
  "properties": {
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Semantic version of the data format"
    },
    "metadata": {
      "type": "object",
      "required": ["created", "lastModified", "defaultCurrency"],
      "properties": {
        "created": {
          "type": "string",
          "format": "date-time",
          "description": "Creation timestamp in ISO 8601 format"
        },
        "lastModified": {
          "type": "string",
          "format": "date-time",
          "description": "Last modification timestamp in ISO 8601 format"
        },
        "defaultCurrency": {
          "type": "string",
          "pattern": "^[A-Z]{3}$",
          "description": "Default currency code (ISO 4217)"
        },
        "owner": {
          "type": "string",
          "description": "Owner name"
        },
        "description": {
          "type": "string",
          "description": "File description"
        }
      }
    },
    "currencies": {
      "type": "array",
      "description": "List of currencies used in the application",
      "items": {
        "$ref": "#/definitions/currency"
      }
    },
    "accounts": {
      "type": "array",
      "description": "List of all accounts",
      "items": {
        "$ref": "#/definitions/account"
      }
    },
    "transactions": {
      "type": "array",
      "description": "List of all transactions",
      "items": {
        "$ref": "#/definitions/transaction"
      }
    },
    "budgets": {
      "type": "array",
      "description": "List of budgets",
      "items": {
        "$ref": "#/definitions/budget"
      }
    },
    "recurringTransactions": {
      "type": "array",
      "description": "List of recurring transaction templates",
      "items": {
        "$ref": "#/definitions/recurringTransaction"
      }
    }
  },
  "definitions": {
    "currency": {
      "type": "object",
      "required": ["code", "name", "symbol", "decimalPlaces"],
      "properties": {
        "code": {
          "type": "string",
          "pattern": "^[A-Z]{3}$",
          "description": "ISO 4217 currency code"
        },
        "name": {
          "type": "string",
          "minLength": 1,
          "description": "Full name of the currency"
        },
        "symbol": {
          "type": "string",
          "minLength": 1,
          "description": "Currency symbol"
        },
        "decimalPlaces": {
          "type": "integer",
          "minimum": 0,
          "maximum": 8,
          "description": "Number of decimal places"
        },
        "isDefault": {
          "type": "boolean",
          "description": "Whether this is the default currency"
        },
        "exchangeRates": {
          "type": "array",
          "description": "Historical exchange rates",
          "items": {
            "type": "object",
            "required": ["date", "rate"],
            "properties": {
              "date": {
                "type": "string",
                "pattern": "^\\d{4}-\\d{2}-\\d{2}$",
                "description": "Date in YYYY-MM-DD format"
              },
              "rate": {
                "type": "number",
                "exclusiveMinimum": 0,
                "description": "Exchange rate to default currency"
              },
              "source": {
                "type": "string",
                "description": "Source of the exchange rate"
              }
            }
          }
        }
      }
    },
    "account": {
      "type": "object",
      "required": ["id", "name", "type", "currency", "opened"],
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^acc_\\d+$",
          "description": "Unique account identifier"
        },
        "name": {
          "type": "string",
          "pattern": "^[A-Za-z]+:[A-Za-z0-9: ]+$",
          "description": "Hierarchical account name"
        },
        "type": {
          "type": "string",
          "enum": ["Assets", "Liabilities", "Income", "Expenses", "Equity"],
          "description": "Account type"
        },
        "currency": {
          "type": "string",
          "pattern": "^[A-Z]{3}$",
          "description": "Account currency (ISO 4217)"
        },
        "opened": {
          "type": "string",
          "pattern": "^\\d{4}-\\d{2}-\\d{2}$",
          "description": "Opening date in YYYY-MM-DD format"
        },
        "closed": {
          "type": ["string", "null"],
          "pattern": "^\\d{4}-\\d{2}-\\d{2}$",
          "description": "Closing date in YYYY-MM-DD format (null if active)"
        },
        "description": {
          "type": "string",
          "description": "Account description"
        },
        "metadata": {
          "type": "object",
          "description": "Additional metadata"
        }
      }
    },
    "transaction": {
      "type": "object",
      "required": ["id", "date", "description", "postings"],
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^txn_\\d+$",
          "description": "Unique transaction identifier"
        },
        "date": {
          "type": "string",
          "pattern": "^\\d{4}-\\d{2}-\\d{2}$",
          "description": "Transaction date in YYYY-MM-DD format"
        },
        "description": {
          "type": "string",
          "minLength": 1,
          "description": "Transaction description"
        },
        "payee": {
          "type": ["string", "null"],
          "description": "Payee or payer"
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Tags for categorization"
        },
        "postings": {
          "type": "array",
          "minItems": 2,
          "items": {
            "$ref": "#/definitions/posting"
          },
          "description": "List of postings (minimum 2)"
        },
        "metadata": {
          "type": "object",
          "description": "Additional metadata"
        }
      }
    },
    "posting": {
      "type": "object",
      "required": ["accountId", "amount", "currency"],
      "properties": {
        "accountId": {
          "type": "string",
          "pattern": "^acc_\\d+$",
          "description": "Reference to account ID"
        },
        "amount": {
          "type": "number",
          "not": {
            "const": 0
          },
          "description": "Amount (positive = debit, negative = credit)"
        },
        "currency": {
          "type": "string",
          "pattern": "^[A-Z]{3}$",
          "description": "Currency code (ISO 4217)"
        },
        "exchangeRate": {
          "type": "object",
          "required": ["rate", "baseCurrency", "quoteCurrency", "equivalentAmount"],
          "properties": {
            "rate": {
              "type": "number",
              "exclusiveMinimum": 0,
              "description": "Exchange rate applied"
            },
            "baseCurrency": {
              "type": "string",
              "pattern": "^[A-Z]{3}$",
              "description": "Base currency"
            },
            "quoteCurrency": {
              "type": "string",
              "pattern": "^[A-Z]{3}$",
              "description": "Quote currency"
            },
            "equivalentAmount": {
              "type": "number",
              "description": "Equivalent amount in base currency"
            }
          },
          "description": "Exchange rate information for currency conversion"
        },
        "comment": {
          "type": "string",
          "description": "Comment on this posting"
        }
      }
    },
    "budget": {
      "type": "object",
      "required": ["id", "name", "accountPattern", "period", "amount", "currency", "startDate"],
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^bud_\\d+$",
          "description": "Unique budget identifier"
        },
        "name": {
          "type": "string",
          "minLength": 1,
          "description": "Budget name"
        },
        "accountPattern": {
          "type": "string",
          "description": "Account pattern (supports * wildcard)"
        },
        "period": {
          "type": "string",
          "enum": ["daily", "weekly", "monthly", "quarterly", "yearly"],
          "description": "Budget period"
        },
        "amount": {
          "type": "number",
          "exclusiveMinimum": 0,
          "description": "Budget amount"
        },
        "currency": {
          "type": "string",
          "pattern": "^[A-Z]{3}$",
          "description": "Currency code (ISO 4217)"
        },
        "startDate": {
          "type": "string",
          "pattern": "^\\d{4}-\\d{2}-\\d{2}$",
          "description": "Start date in YYYY-MM-DD format"
        },
        "endDate": {
          "type": ["string", "null"],
          "pattern": "^\\d{4}-\\d{2}-\\d{2}$",
          "description": "End date in YYYY-MM-DD format (null if indefinite)"
        },
        "alerts": {
          "type": "object",
          "properties": {
            "warningThreshold": {
              "type": "number",
              "minimum": 0,
              "maximum": 1,
              "description": "Warning threshold (0-1)"
            },
            "criticalThreshold": {
              "type": "number",
              "minimum": 0,
              "maximum": 1,
              "description": "Critical threshold (0-1)"
            }
          },
          "description": "Alert thresholds"
        }
      }
    },
    "recurringTransaction": {
      "type": "object",
      "required": ["id", "name", "frequency", "startDate", "enabled", "template"],
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^rec_\\d+$",
          "description": "Unique recurring transaction identifier"
        },
        "name": {
          "type": "string",
          "minLength": 1,
          "description": "Recurring transaction name"
        },
        "frequency": {
          "type": "string",
          "enum": ["daily", "weekly", "monthly", "yearly"],
          "description": "Recurrence frequency"
        },
        "dayOfMonth": {
          "type": "integer",
          "minimum": 1,
          "maximum": 31,
          "description": "Day of month (for monthly frequency)"
        },
        "dayOfWeek": {
          "type": "integer",
          "minimum": 0,
          "maximum": 6,
          "description": "Day of week (for weekly frequency, 0=Sunday)"
        },
        "dayOfYear": {
          "type": "string",
          "pattern": "^\\d{2}-\\d{2}$",
          "description": "Day of year in MM-DD format (for yearly frequency)"
        },
        "startDate": {
          "type": "string",
          "pattern": "^\\d{4}-\\d{2}-\\d{2}$",
          "description": "Start date in YYYY-MM-DD format"
        },
        "endDate": {
          "type": ["string", "null"],
          "pattern": "^\\d{4}-\\d{2}-\\d{2}$",
          "description": "End date in YYYY-MM-DD format (null if indefinite)"
        },
        "enabled": {
          "type": "boolean",
          "description": "Whether this recurrence is enabled"
        },
        "template": {
          "type": "object",
          "required": ["description", "postings"],
          "properties": {
            "description": {
              "type": "string",
              "minLength": 1,
              "description": "Transaction description (supports template variables)"
            },
            "payee": {
              "type": ["string", "null"],
              "description": "Payee or payer"
            },
            "tags": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "description": "Tags for categorization"
            },
            "postings": {
              "type": "array",
              "minItems": 2,
              "items": {
                "$ref": "#/definitions/posting"
              },
              "description": "List of postings (minimum 2)"
            }
          },
          "description": "Transaction template"
        }
      }
    }
  }
}
